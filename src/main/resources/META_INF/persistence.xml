<?xml version="1.0" encoding="UTF-8"?>
<persistence xmlns="http://xmlns.jcp.org/xml/ns/persistence" version="2.1">
    <persistence-unit name="jinseok-shop">
        <properties>
            <!--필수-->
            <property name="javax.persistence.jdbc.driver" value="org.h2.Driver"/>
            <property name="javax.persistence.jdbc.user" value="sa"/>
            <property name="javax.persistence.jdbc.password" value=""/>
            <property name="javax.persistence.jdbc.url" value="jdbc:h2:tcp://localhost/~/jinseokshop"/>
            <property name="hibernate.dialect" value="org.hibernate.dialect.H2Dialect"/>

            <!--옵션-->
            <!--콘솔에 하이버네이트가 실행하는 sql문 출력-->
            <property name="hibernate.show_sql" value="true"/>
            <!--sql문 출력 시 보기 좋게 정렬-->
            <property name="hibernate.format_sql" value="true"/>
            <!--쿼리 출력 시 주석도 함께 출력-->
            <property name="hibernate.use_sql_comments" value="true"/>
            <!--애플리케이션 실행 시점 데이터베이스 ddl 자동 생성-->
            <property name="hibernate.hbm2ddl.auto" value="created"/>
            <!--이름 매핑 전략 - camelStrategy -> UNDER_SCORE-->
            <property name="hibernate.ejb.naming_strategy" value="org.hibernate.cfg.ImprovedNamingStrategy"/>
        </properties>
    </persistence-unit>
</persistence>